{
  "name": "hoa-court-reservations",
  "version": "1.0.0",
  "description": "HOA Court Reservations PWA - A mobile-first Progressive Web App for managing pickleball court bookings with flexible group booking capabilities",
  "private": true,
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "preview": "vite preview",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "prettier --plugin-search-dir . --check . && eslint .",
    "format": "prettier --plugin-search-dir . --write .",
    "test:db": "node scripts/test-db.js",
    "setup:env": "cp .env.example .env && echo 'Please edit .env with your Supabase credentials'"
  },
  "devDependencies": {
    "@sveltejs/adapter-auto": "^3.3.1",
    "@sveltejs/kit": "^2.21.5",
    "@types/web-push": "^3.6.4",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.28.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-svelte": "^2.30.0",
    "prettier": "^3.5.3",
    "prettier-plugin-svelte": "^3.4.0",
    "svelte": "^5.34.1",
    "svelte-check": "^4.2.1",
    "tslib": "^2.4.1",
    "typescript": "^5.0.0",
    "vite": "^6.3.5",
    "vite-plugin-pwa": "^1.0.0"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.38.0",
    "dotenv": "^16.5.0",
    "resend": "^4.6.0",
    "web-push": "^3.6.6"
  },
  "type": "module",
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "hoa",
    "court-reservations",
    "pickleball",
    "pwa",
    "sveltekit",
    "typescript",
    "supabase"
  ],
  "author": "HOA Court Reservations Team",
  "license": "MIT"
}
